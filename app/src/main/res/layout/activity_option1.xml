<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/large_spacing">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textAppearance="@style/text_title"
        android:layout_marginBottom="@dimen/small_spacing"/>

    <EditText
        android:id="@+id/et_input_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text=""
        tools:ignore="LabelFor"
        android:hint="@string/et_input_hint"
        android:layout_marginBottom="@dimen/small_spacing" />

    <Button
        android:id="@+id/btn_process_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_size"
        android:onClick="process"
        android:text="@string/process"
        android:layout_marginBottom="@dimen/small_spacing" />

    <TextView
        android:id="@+id/tv_body_1"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/tv_output_init"
        android:textAppearance="@style/text_title" />

    <RelativeLayout
        android:id="@+id/relativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_prev_01"
                android:layout_width="130dp"
                android:layout_height="@dimen/touch_target_size"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="process"
                android:text="PREV"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="0dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_next_01"
                android:layout_width="130dp"
                android:layout_height="@dimen/touch_target_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:onClick="process"
                android:text="NEXT"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="0dp" />

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>
